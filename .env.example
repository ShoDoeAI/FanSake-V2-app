# Backend Configuration
NODE_ENV=production
PORT=5001

# MongoDB Configuration (Railway provides this automatically)
MONGODB_URI=mongodb://mongo:27017/musicconnect
DATABASE_NAME=musicconnect

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d

# Frontend URL
CLIENT_URL=https://musicconnect-frontend.vercel.app

# File Upload Configuration
MAX_FILE_SIZE_MUSIC=52428800
MAX_FILE_SIZE_IMAGE=10485760
MAX_FILE_SIZE_VIDEO=209715200

# AWS S3 Configuration (Optional - for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=musicconnect-uploads

# Email Configuration (Optional)
EMAIL_FROM=noreply@musicconnect.com
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Stripe Configuration (Optional - for payments)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Analytics (Optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=