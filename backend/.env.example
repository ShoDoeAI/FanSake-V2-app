# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/musicconnect?retryWrites=true&w=majority

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=musicconnect-media

# CloudFront Configuration
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Email Configuration (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@musicconnect.com

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=100

# Media Processing
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=mp3,wav,flac,m4a
ALLOWED_IMAGE_FORMATS=jpg,jpeg,png,gif
ALLOWED_VIDEO_FORMATS=mp4,mov,avi

# Platform Settings
PLATFORM_FEE_PERCENT=10
MINIMUM_PAYOUT_AMOUNT=1000

