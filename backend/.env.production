# Production Environment Variables
NODE_ENV=production
PORT=5001

# MongoDB Atlas (Free Tier)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/musicconnect?retryWrites=true&w=majority

# Redis (Use Redis Cloud free tier)
REDIS_HOST=redis-12345.c1.us-east-1.aws.cloud.redislabs.com
REDIS_PORT=12345
REDIS_PASSWORD=your_redis_password

# AWS S3 (for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=musicconnect-media

# CloudFront CDN (optional but recommended)
CLOUDFRONT_DOMAIN=https://d1234567890.cloudfront.net
CLOUDFRONT_DISTRIBUTION_ID=E1234567890

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PLATFORM_FEE_PERCENT=10

# JWT Secret (generate a strong one)
JWT_SECRET=your_super_secure_jwt_secret_key_change_this
JWT_EXPIRES_IN=7d

# Frontend URL
CLIENT_URL=https://musicconnect.vercel.app

# Email (SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@musicconnect.com

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Sentry (error tracking)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id